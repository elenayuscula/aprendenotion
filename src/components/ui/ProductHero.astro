---
/**
 * ProductHero — Hero para páginas de producto/herramienta
 *
 * Props:
 *   tag       — Etiqueta tipo (ej: "Templates", "Curso")
 *   tagColor? — "orange" | "blue" (default: "orange")
 *   title     — Título del producto
 *   subtitle? — Subtítulo
 *   image?    — Ruta a imagen del producto
 *   imageAlt? — Alt de la imagen
 *   cta?      — Texto del botón CTA
 *   href?     — URL del botón
 */
interface Props {
  tag: string;
  tagColor?: 'orange' | 'blue';
  title: string;
  subtitle?: string;
  image?: string;
  imageAlt?: string;
  cta?: string;
  href?: string;
}

const { tag, tagColor = 'orange', title, subtitle, image, imageAlt = '', cta, href } = Astro.props;
---

<section class="pd-hero">
  <span class={`pd-hero__tag pd-hero__tag--${tagColor}`}>{tag}</span>
  <h1 class="pd-hero__title">{title}</h1>
  {subtitle && <p class="pd-hero__subtitle">{subtitle}</p>}
  {cta && href && <a href={href} class="btn btn--accent btn--lg">{cta}</a>}
  {image && (
    <div class="pd-hero__image">
      <img src={image} alt={imageAlt} loading="lazy" />
    </div>
  )}
</section>
